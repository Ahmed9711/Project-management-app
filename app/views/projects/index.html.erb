<div class="card">
    <div class="card-body">
      <h2 class="card-title d-flex justify-content-between">
        <span>Projects</span>
          <%= link_to "New project", new_project_path , class: "btn btn-primary"%>
        </h2>

        <% @projects.each do |project| %>
           <div class="card">
              <%= link_to project do %>
                <h5 class="card-title"><%= project.name %></h5>
                <p><%= project.description %></p>
              <% end  %>
            </div>
        <% end  %>
    </div>
</div>



